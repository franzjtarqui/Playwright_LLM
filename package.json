{
  "name": "playwright-ai-agent",
  "version": "1.0.0",
  "description": "Framework de automatizaci√≥n con IA - Tests en lenguaje natural",
  "main": "dist/runner/index.js",
  "type": "module",
  "bin": {
    "ai-test": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    
    "test": "tsc && node dist/tests/run.js",
    "test:smoke": "tsc && node dist/tests/run.js --tag smoke",
    "test:login": "tsc && node dist/tests/run.js --tag login",
    "test:operadores": "tsc && node dist/tests/run.js --tag operadores",
    "test:piloto": "tsc && node dist/tests/run.js --tag piloto",
    "test:e2e": "tsc && node dist/tests/run.js --tag e2e",
    "test:exclude-slow": "tsc && node dist/tests/run.js --exclude slow",
    
    "ai-test": "tsc && node dist/cli/index.js",
    
    "install-browsers": "playwright install chromium"
  },
  "keywords": ["playwright", "ai", "automation", "llm", "gemini", "openai", "claude", "typescript"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@google/generative-ai": "^0.21.0",
    "openai": "^4.70.0",
    "@playwright/test": "^1.48.0",
    "express": "^4.18.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0"
  }
}
